{
  "manifest_version": 2,
  "name": "Just My Size",
  "version": "1.0",
  "description": "The perfect fit every time",
  "icons": {
    "16": "images/size-guide16.png",
    "32": "images/size-guide32.png",
    "48": "images/size-guide48.png",
    "128": "images/size-guide128.png"
  },
  "browser_action": {
    "default_title": "Just My Size",
    "default_popup": "views/popup.html",
    "default_icon": {
      "16": "images/size-guide16.png",
      "32": "images/size-guide32.png",
      "48": "images/size-guide48.png",
      "128": "images/size-guide128.png"
    }
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistence": false
  },
  "permissions": ["storage"],
  "options_page": "views/options.html"
}